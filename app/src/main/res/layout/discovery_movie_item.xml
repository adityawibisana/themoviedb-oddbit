<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:paddingLeft="@dimen/margin_small"
    android:paddingBottom="@dimen/margin">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintLeft_toRightOf="@id/poster"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/title"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@color/primaryColor"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/poster"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/font_size_title"
        tools:text="Title of the movie that is very long and must have 3 dots" />

    <TextView
        android:id="@+id/voteAverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryColor"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/poster"
        android:layout_marginBottom="-8dp"
        tools:text="7.9" />

    <TextView
        android:id="@+id/popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/vote"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/font_size_tiny"
        android:textColor="@color/dark_gray"
        tools:text="Popularity" />

    <TextView
        android:id="@+id/slash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/poster"
        app:layout_constraintLeft_toRightOf="@id/voteAverage"
        android:textSize="@dimen/font_size_tiny"
        android:text=" / " />

    <TextView
        android:id="@+id/vote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/poster"
        app:layout_constraintLeft_toRightOf="@id/slash"
        android:textSize="@dimen/font_size_tiny"
        tools:text="Vote count" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/poster"
        android:layout_width="@dimen/list_width"
        android:layout_height="@dimen/list_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/poster"
        app:layout_constraintRight_toRightOf="@id/poster"
        android:background="@color/black"
        tools:text="Release date"
        android:paddingRight="@dimen/margin_small"/>



</androidx.constraintlayout.widget.ConstraintLayout>